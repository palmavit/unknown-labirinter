<?xml version="1.0"?>
<sdf version="1.6">
  <world name="room">

    <!-- Optional tweaks to increase performance -->
    <scene>
        <shadows>false</shadows>
    </scene>
    <physics type="ode">
        <!--
        real_time_update_rate: how many times per second physics are calculated.
        max_step_size: how much simulator time passes between physics updates.

        Note that the product of these numbers determines how fast simulator
        time is compared to real time. For example, setting these values to 500
        and 0.001 should increase performance since there's two times less
        calculations, but make robots move 0.5 times as fast. Using 500 and
        0.002 should keep the normal speed.

        Using smaller values for real_time_update_rate may cause issues with
        wheel collision detection.

        -->
        <real_time_update_rate>1000</real_time_update_rate>
        <max_step_size>0.001</max_step_size>
    </physics>

    <include>
      <uri>model://sun</uri>
    </include>

    <model name="floor">
      <static>true</static>
      <pose>0 0 -0.05 0 0 0</pose>
      <link name="tile">
        <pose>0 0 0.001 0 0 0</pose>
        <visual name="visual">
          <geometry>
            <box>
              <size>2 2 0.5</size>  <!-- 2 2 0.1 -->
            </box>
          </geometry>
          <material>
            <script>
              <uri>model://robocake_gazebo/models/floor.material</uri>
              <name>Floor</name>
            </script>
          </material>
        </visual>
        <collision name="collision">
          <geometry>
            <box>
              <size>2 2 0.5</size>  <!-- 2 2 0.1 -->
            </box>
          </geometry>
        </collision>
      </link>
      <link name="ground">
        <visual name="visual">
          <geometry>
            <box>
              <size>20 20 0.1</size>
            </box>
          </geometry>
          <material>
            <!-- <ambient>0.5 0.5 0.5 1</ambient> -->
            <!-- <diffuse>0.5 0.5 0.5 1</diffuse> -->
            <!-- <color rgba="0 0 0 1"/> my -->
            <script>
              <uri>model://robocake_gazebo/models/floor.material</uri>
              <name>Ground</name>
            </script>
          </material>
        </visual>
        <collision name="collision">
          <geometry>
            <box>
              <size>20 20 0.1</size>
            </box>
          </geometry>
        </collision>
      </link>

      <link name="wall_1">
        <pose>0 0.3 0.3 0 0 0</pose>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.7 0.1 0.5</size>
            </box>
          </geometry>
          <material>
            <script>
              <uri>model://robocake_gazebo/models/floor.material</uri>
              <name>Ground</name>
            </script>
          </material>
        </visual>
        <collision name="collision">
          <geometry>
            <box>
              <size>0.7 0.1 0.5</size>
            </box>
          </geometry>
        </collision>
      </link>

    </model>
  </world>
</sdf>
